<%= form_for [@trip, @room] do |f| %>
	<% if @room.errors.any? %>
		<div id="error_explanation">
			<h2><% pluralize(@room.errors.count, "error") %>
			prohibited this room type from being saved:</h2>

			<ul>
			<% @room.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :name, "Name" %><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :description, "Description" %><br>
		<%= f.text_area :description %><br>
	</p>
		<p>
		<%= f.label :min_people, "Minimum Number of People"%><br>
		<%= f.text_field :min_people %>
	</p>
	<p>
		<%= f.label :max_people, "Maximum Number of People" %><br>
		<%= f.text_field :max_people %><br>
	</p>
		<p>
		<%= f.label :cost, "Cost" %><br>
		<%= f.text_field :cost %>
	</p>
	<%= f.submit %>
<% end %>