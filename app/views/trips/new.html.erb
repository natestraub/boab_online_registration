<h2>New Trip</h2>
<%= form_for(@trip) do |f| %>
  <p>
  	<%= f.label :name %><br />
  	<%= f.text_field :name %>
  </p>

  <p>
  	<%= f.label :start_date, "Start Date" %><br />
  	<%= f.text_field :start_date %>
  </p>

  <p>
  	<%= f.label :end_date, "End Date" %><br />
  	<%= f.text_field :end_date %>
  </p>

  <p>
  	<%= f.label :description %><br />
  	<%= f.text_field :description %>
  </p>

  <p>
  	<%= f.label :address %><br />
  	<%= f.text_field :address %>
  </p>

  <p>
  	<%= f.label :city %><br />
  	<%= f.text_field :city %>
  </p>

  <p>
  	<%= f.label :country %><br />
  	<%= f.text_field :country %>
  </p>

  <%= f.submit %>
<% end %>
